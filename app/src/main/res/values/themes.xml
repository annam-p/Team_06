<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FocusWork" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ED413E</item>
        <item name="colorPrimaryVariant">#A11C1A</item>
        <item name="colorOnPrimary">@color/primary_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/divider</item>
        <item name="colorSecondaryVariant">#269AED</item>
        <item name="colorOnSecondary">#226CA1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="divider">@color/divider</item>
        <item name="icon">@color/divider</item>

        <item name="android:actionButtonStyle">@style/customActionButtonStyle</item>
        <item name="actionButtonStyle">@style/customActionButtonStyle</item>

        <item name="buttonBarPositiveButtonStyle">@style/AlertButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertButtonStyle</item>

        <item name="buttonBarNegativeButtonStyle">@style/AlertButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertButtonStyle</item>
    </style>

    <style name="Theme.FocusWork.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FocusWork.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FocusWork.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="customActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:scaleX">0.75</item>
        <item name="android:scaleY">0.75</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="AlertButtonStyle">
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
    </style>

</resources>